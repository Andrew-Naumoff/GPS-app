<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Label for Provider -->
    <TextView
        android:id="@+id/textLabelProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/provider"
        android:layout_centerHorizontal="true" />

    <!-- Value for Provider -->
    <TextView
        android:id="@+id/textProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLabelProvider"
        android:layout_centerHorizontal="true"
        android:text="@string/dummy"
        android:layout_marginTop="8dp"/>

    <!-- Label for Latitude -->
    <TextView
        android:id="@+id/textLabelLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textProvider"
        android:layout_centerHorizontal="true"
        android:text="@string/latitude"
        android:layout_marginTop="16dp"/>

    <!-- Value for Latitude -->
    <TextView
        android:id="@+id/textLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLabelLatitude"
        android:layout_centerHorizontal="true"
        android:text="@string/dummy"
        android:layout_marginTop="8dp"/>

    <!-- Assuming 'textTo' is not needed or is a placeholder for something specific, it's excluded for clarity -->

    <!-- Distance Value -->
    <TextView
        android:id="@+id/textDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLatitude"
        android:layout_centerHorizontal="true"
        android:text="@string/dummy"
        android:layout_marginTop="16dp"/>

    <!-- Button for New Location -->
    <Button
        android:id="@+id/buttonNewLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDistance"
        android:layout_centerHorizontal="true"
        android:text="@string/newButton"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
